#!/bin/sh
set -e -u -x

ssh="ssh \
    -F $HOME/.ssh/config \
    -o ControlMaster=no \
    -v \
    deluged-proxy \
    pppd \
        nodetach \
        notty \
        noauth \
        ifname ppp-deluged"
socat TCP-LISTEN:8080,reuseaddr,fork EXEC:"curl ifconfig.co" &
exec socat TCP-LISTEN:7777,reuseaddr,fork EXEC:"$ssh"
